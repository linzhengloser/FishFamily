<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="696px"
              android:orientation="vertical"
              android:background="@color/white">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="580px"
            android:background="@color/colorPrimary">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:src="@drawable/default_avatar"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14px"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32px"
                        android:textColor="@color/white"
                        android:text="大佬"/>

                <ImageView
                        android:layout_width="77px"
                        android:layout_height="32px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17px"
                        android:src="@drawable/mine_level_six"/>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18px"
                    android:textSize="26px"
                    android:textColor="@color/white"
                    android:text="23333鱼豆"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21px"
                    android:textSize="26px"
                    android:textColor="@color/white"
                    android:text="湖北 武汉 江汉区"/>


        </LinearLayout>

    </FrameLayout>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="95px">


        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="#dddddd"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="horizontal">


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="32px"
                        android:textColor="@color/black"
                        android:text="分享"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="4px"
                        android:background="@color/colorPrimary"/>

            </LinearLayout>

            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:background="#dddddd"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="32px"
                        android:textColor="@color/black"
                        android:text="分享"/>


            </LinearLayout>


            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:background="#dddddd"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="32px"
                        android:textColor="@color/black"
                        android:text="分享"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f1f1"/>

</LinearLayout>
