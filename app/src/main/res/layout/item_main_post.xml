<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingTop="24px"
              android:paddingLeft="32px"
              android:paddingRight="32px"
              android:paddingBottom="18px"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!-- 头像 昵称 等级 描述 关注 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                app:layout_auto_baseheight="width"
                android:src="@drawable/default_avatar"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:text="大佬"
                        android:textColor="#242424"
                        />

                <ImageView
                        android:layout_width="77px"
                        android:layout_height="32px"
                        android:layout_marginLeft="15px"
                        android:src="@drawable/mine_level_six"/>

            </LinearLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:text="来自龙鱼圈"/>

        </LinearLayout>


        <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <TextView
                android:layout_width="120px"
                android:layout_height="52px"
                android:text="+关注"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24px"
                android:background="@drawable/shape_common_attention"
                />

    </LinearLayout>

    <!-- 标题 -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/black"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="28px"
            android:text="新手教学,求养鱼小知识"/>

    <!-- 内容 -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginBottom="13px"
            android:text="我要养鱼我要养鱼我要养鱼我要养鱼我要养鱼我要养鱼我要养鱼我要养鱼我要养鱼"/>

    <!-- 图片 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:layout_marginBottom="24px"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/default_avatar"/>

    </LinearLayout>

    <!-- 点赞 and 评论 -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="right">

        <ImageView
                android:layout_width="30px"
                android:layout_height="26px"
                android:src="@drawable/main_post_like_unselected"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2333"
                android:textSize="24px"
                android:layout_marginLeft="12px"
                android:textColor="#999999"/>

        <ImageView
                android:layout_width="30px"
                android:layout_height="26px"
                android:layout_marginLeft="40px"
                android:src="@drawable/main_post_comment"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2333"
                android:textSize="24px"
                android:layout_marginLeft="12px"
                android:textColor="#999999"/>

        <ImageView
                android:layout_width="45px"
                android:layout_height="10px"
                android:layout_marginLeft="34px"
                android:src="@drawable/common_menu_gray_more"/>

    </LinearLayout>
    

</LinearLayout>