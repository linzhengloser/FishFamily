<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="90px">

    <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

        
        <TextView
                android:id="@+id/tv_tab_synthesize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="综合"
                android:textSize="28px"
                android:gravity="center"
                android:textColor="@color/colorPrimary"/>

        <TextView
                android:id="@+id/tv_tab_sales_volume"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="销量"
                android:textSize="28px"
                android:gravity="center"
                android:textColor="#999999"/>

        <TextView
                android:id="@+id/tv_tab_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="上新"
                android:textSize="28px"
                android:gravity="center"
                android:textColor="#999999"/>

        <TextView
                android:id="@+id/tv_tab_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="价格"
                android:textSize="28px"
                android:gravity="center"
                android:textColor="#999999"/>
        
        
        <ImageView
                android:id="@+id/iv_change_layout"
                android:layout_width="98px"
                android:layout_height="match_parent"
                android:src="@drawable/main_shop_main_commodity_linear"
                android:scaleType="centerInside"
                />

    </LinearLayout>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            />

</LinearLayout>