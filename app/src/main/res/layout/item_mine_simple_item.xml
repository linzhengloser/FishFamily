<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="90px"
              android:paddingLeft="30px"
              android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">


        <ImageView
                android:id="@+id/iv_item_mine_simple_item_icon"
                android:layout_width="32px"
                android:layout_height="32px"
                app:layout_auto_baseheight="width"/>

        <TextView
                android:id="@+id/tv_item_mine_simple_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="30px"
                android:textColor="#242424"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tv_item_mine_simple_item_notification_number"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginRight="24px"
                android:textColor="#242424"
                android:textSize="24px"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/shape_mine_simple_item_notification_number"/>

        <ImageView
                android:id="@+id/tv_item_mine_simple_item_arrows"
                android:layout_width="16px"
                android:layout_height="25px"
                android:layout_marginRight="30px"
                android:src="@drawable/common_arrows"/>

    </LinearLayout>


    <View
            android:id="@+id/v_item_mine_simple_item_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>

</LinearLayout>
