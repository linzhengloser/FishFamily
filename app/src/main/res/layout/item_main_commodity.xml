<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingTop="24px"
              android:paddingLeft="32px"
              android:paddingRight="32px"
              android:paddingBottom="18px"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!-- 头像 昵称 等级 描述 关注 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="80px"
                android:layout_height="80px"
                app:layout_auto_baseheight="width"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:textColor="#242424"
                        />

                <ImageView
                        android:id="@+id/iv_level"
                        android:layout_width="77px"
                        android:layout_height="32px"
                        android:layout_marginLeft="15px"/>

            </LinearLayout>


            <TextView
                    android:id="@+id/tv_date_repertory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="24px"/>

        </LinearLayout>


        <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fa0f41"
                android:gravity="center"
                />

    </LinearLayout>

    <!-- 标题 -->
    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/black"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="28px"/>

    <!-- 内容 -->
    <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginBottom="13px"/>

    <!-- 图片 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:layout_marginBottom="24px"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/default_avatar"/>

    </LinearLayout>

    <!-- 点赞 and 评论 -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="right">

        <TextView
                android:id="@+id/tv_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2333"
                android:textSize="24px"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/common_like_unselected"
                android:textColor="#999999"/>


        <TextView
                android:id="@+id/tv_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2333"
                android:textSize="24px"
                android:layout_marginLeft="40px"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/common_comment"
                android:drawablePadding="6dp"
                android:textColor="#999999"/>

        <ImageView
                android:layout_width="45px"
                android:layout_height="10px"
                android:layout_marginLeft="34px"
                android:src="@drawable/common_menu_gray_more"/>

    </LinearLayout>


</LinearLayout>