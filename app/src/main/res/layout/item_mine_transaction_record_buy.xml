<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="470px"
              android:orientation="vertical"
              android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/black"
                    android:text="大佬的店"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="#fa0f41"
                    android:text="待付款"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22px"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="184px"
                    android:layout_height="184px"
                    android:src="@drawable/default_avatar"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="37px"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="74px"
                        android:textSize="28px"
                        android:lines="2"
                        android:textColor="@color/black"
                        android:text="ThinkPad T470P i7 7700HQ 16G 256G 笔记本电脑，办公绝佳选择。"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="32px"
                            android:textColor="#fa0f41"
                            android:text="¥23333"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="32px"
                            android:textColor="@color/black"
                            android:text="x2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="22px"
                android:background="#dddddd"/>


    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30px"
            android:layout_marginTop="18px"
            android:layout_marginBottom="18px"
            android:text="共两件商品 小计¥2333.00"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#aaaaaa"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="18px"
            android:orientation="horizontal">


        <TextView
                android:layout_width="150px"
                android:layout_height="54px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="@color/black"
                android:background="@drawable/shape_transaction_record_simple_btn_bg"
                android:text="联系卖家"/>

        <TextView
                android:layout_width="150px"
                android:layout_height="54px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="@color/black"
                android:background="@drawable/shape_transaction_record_simple_btn_bg"
                android:text="取消订单"/>

        <TextView
                android:layout_width="150px"
                android:layout_height="54px"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:textSize="26px"
                android:background="@drawable/shape_transaction_record_pay_btn_bg"
                android:textColor="@color/colorPrimary"
                android:text="付款"/>


    </LinearLayout>

</LinearLayout>
