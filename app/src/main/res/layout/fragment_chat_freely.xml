<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingRight="20px"
            android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30px"
                android:textColor="@color/white"/>

        <TextView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="right|center_vertical"
                android:text="创群"
                android:textSize="30px"
                android:textColor="@color/white"/>
        

    </FrameLayout>


    <LinearLayout
            android:id="@+id/ll_chat_freely"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:layout_marginVertical="12dp">

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <!-- 消息 -->
        <TextView
                android:id="@+id/tv_chat_freely_message_tab"
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/shape_chat_freely_message_tab_unselected"
                android:textSize="15dp"
                android:text="消息"/>

        <!-- 通讯录 -->
        <TextView
                android:id="@+id/tv_chat_freely_contact_list_tab"
                android:layout_width="270px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/shape_chat_freely_contact_list_tab_unselected"
                android:layout_marginHorizontal="-1dp"
                android:textSize="15dp"
                android:text="通讯录"/>


        <!--&lt;!&ndash; 创群 &ndash;&gt;-->
        <!--<TextView-->
                <!--android:id="@+id/tv_chat_freely_create_group_tab"-->
                <!--android:layout_width="180px"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center"-->
                <!--android:background="@drawable/shape_chat_freely_create_group_tab_unselected"-->
                <!--android:textSize="15dp"-->
                <!--android:text="创群"/>-->

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_chat_freely"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>
