<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20px"
             android:paddingBottom="40px">


    <!-- 接收 Layout -->
    <LinearLayout
            android:id="@+id/ll_item_chat_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="150px"
            android:orientation="horizontal"
            android:layout_gravity="left">

        <ImageView android:id="@+id/iv_item_chat_receive_avatar"
                   android:layout_width="90px"
                   android:layout_height="90px"
                   android:background="#bfbfbf"/>


        <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:background="@drawable/shape_chat_receive_dot"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12px"
                />

        <FrameLayout
                android:id="@+id/fl_item_chat_receive_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_chat_receive_bubble"/>

    </LinearLayout>

    <!-- 发送 Layout -->
    <LinearLayout
            android:id="@+id/ll_item_chat_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="150px"
            android:paddingRight="30px"
            android:orientation="horizontal"
            android:layout_gravity="right">


        <FrameLayout
                android:id="@+id/fl_item_chat_sent_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_chat_sent_bubble"/>

        <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:background="@drawable/shape_chat_sent_dot"
                android:layout_gravity="bottom"
                android:layout_marginRight="12px"
                />

        <ImageView android:id="@+id/iv_item_chat_sent_avatar"
                   android:layout_width="90px"
                   android:layout_height="90px"
                   android:background="#bfbfbf"/>

    </LinearLayout>

</FrameLayout>