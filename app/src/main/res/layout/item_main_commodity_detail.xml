<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="28px"
              android:orientation="vertical"
              android:background="@color/white">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    app:layout_auto_basewidth="height"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <TextView
                            android:id="@+id/tv_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30px"
                            android:textColor="@color/black"
                            />

                    <ImageView
                            android:id="@+id/iv_level"
                            android:layout_width="77px"
                            android:layout_height="32px"
                            android:layout_marginLeft="15px"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30px"
                            android:textColor="#ff0000"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                    <TextView
                            android:id="@+id/tv_comment_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="#999999"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                    <TextView
                            android:id="@+id/tv_repertory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="#999999"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:textSize="30px"
                android:textColor="@color/black"/>


        <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"/>


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="570px"
                android:layout_marginTop="18px"
                android:scaleType="fitXY"
                android:src="@drawable/default_avatar"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="18px"
                android:background="#dddddd"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:layout_marginBottom="18px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="20px"
                    android:layout_height="26px"
                    android:src="@drawable/main_commodity_detail_location"
                    />

            <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:textSize="26px"
                    android:textColor="#999999"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="#999999"/>

        </LinearLayout>


    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#eeeeee"/>


    <LinearLayout
            android:id="@+id/ll_like_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30px"
            android:paddingLeft="30px"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="10px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="10px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="10px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="10px"
                android:visibility="gone"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="10px"
                android:visibility="gone"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        <TextView
                android:id="@+id/tv_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textSize="26px"
                android:textColor="#999999"/>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#eeeeee"/>

    <TextView
            android:id="@+id/tv_new_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:textColor="@color/black"
            android:layout_marginTop="16px"
            android:textSize="26px"/>

</LinearLayout>
