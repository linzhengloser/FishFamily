<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="28px"
              android:orientation="vertical"
              android:background="@color/white">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    app:layout_auto_basewidth="height"
                    android:src="@drawable/default_avatar"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30px"
                            android:textColor="@color/black"
                            android:text="大佬"
                            />

                    <ImageView
                            android:layout_width="77px"
                            android:layout_height="32px"
                            android:layout_marginLeft="15px"
                            android:src="@drawable/mine_level_six"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30px"
                            android:textColor="#ff0000"
                            android:text="¥2333.00"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="#999999"
                            android:text="共2333条评论，2333人点赞"/>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="#999999"
                            android:text="剩5件"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:textSize="30px"
                android:textColor="@color/black"
                android:text="我要卖二手鱼竿，钓到过鲤鱼王。"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="贼厉害的鱼竿，几乎百发百中，钓到过传说中的鲤鱼王。"/>


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="570px"
                android:layout_marginTop="18px"
                android:scaleType="fitXY"
                android:src="@drawable/default_avatar"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="18px"
                android:background="#dddddd"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:layout_marginBottom="18px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="20px"
                    android:layout_height="26px"
                    android:src="@drawable/main_commodity_detail_location"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:textSize="26px"
                    android:textColor="#999999"
                    android:text="湖北省·武汉市东西湖区"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="#999999"
                    android:text="07-17  12:12"/>

        </LinearLayout>


    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#eeeeee"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30px"
            android:paddingLeft="30px"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        
        
        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="4px"
                android:src="@drawable/default_avatar"/>

        <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                app:layout_auto_baseheight="width"
                android:layout_marginRight="10px"
                android:src="@drawable/default_avatar"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2333人点过赞"
                android:textSize="26px"
                android:textColor="@color/colorPrimary"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="26px"
                android:text="2333人浏览过"/>
        
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#eeeeee"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="热门评论(2333)"
            android:textColor="@color/black"
            android:layout_marginTop="16px"
            android:textSize="26px"/>

</LinearLayout>
