<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:clipChildren="false">

    <include layout="@layout/common_titile_bar"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="196px"
            android:paddingLeft="75px"
            android:paddingRight="75px"
            android:orientation="vertical">


        <!-- 手机号 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="30px"
                    android:layout_height="50px"
                    android:src="@drawable/login_tel"
                    />

            <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38px"
                    android:background="@color/transparency"
                    android:textSize="32px"
                    android:textColorHint="#999999"
                    android:textColor="@color/black"
                    android:hint="输入手机号"
                    />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="45px"
                android:background="#dddddd"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55px"
                android:paddingLeft="18px"
                android:orientation="horizontal"
                android:gravity="center_vertical">


            <ImageView
                    android:layout_width="36px"
                    android:layout_height="40px"
                    android:src="@drawable/login_pwd"/>

            <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="38px"
                    android:background="@color/transparency"
                    android:textSize="32px"
                    android:textColorHint="#999999"
                    android:textColor="@color/black"
                    android:hint="输入密码"
                    />

            <ImageView
                    android:layout_width="40px"
                    android:layout_height="28px"/>


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="50px"
                android:background="#dddddd"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="65px"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/colorPrimary"
                    android:text="没有账号，立即去登录"/>

            <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="100px"
                    android:layout_height="50px"
                    android:layout_marginLeft="17px"
                    android:gravity="center"
                    android:background="@drawable/shape_login_register"
                    android:textColor="@color/colorPrimary"
                    android:text="注册"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="52px"
                android:gravity="center"
                android:background="@drawable/shape_login"
                android:textSize="32px"
                android:textColor="@color/white"
                android:text="登录"/>

        <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34px"
                android:textSize="26px"
                android:textColor="#999999"
                android:text="忘记密码"/>


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="325px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="#999999"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="24px"
                android:textColor="#999999"
                android:text="使用其他方式登录"/>

        <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="#999999"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="440px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="148px"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="60px"
                android:layout_height="50px"
                android:src="@drawable/login_sina"
                />

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="60px"
                android:layout_height="50px"
                android:src="@drawable/login_qq"
                />

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="60px"
                android:layout_height="50px"
                android:src="@drawable/login_wechat"
                />

    </LinearLayout>

</FrameLayout>
