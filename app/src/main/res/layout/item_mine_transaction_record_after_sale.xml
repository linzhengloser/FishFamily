<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:paddingTop="18px"
              android:paddingBottom="18px"
              android:paddingLeft="30px"
              android:layout_height="210px">

    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款订单号: 23333"
            android:textSize="24px"
            android:textColor="#999999"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            android:layout_marginTop="18px"
            android:layout_marginBottom="18px"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30px"
            android:orientation="horizontal">
        
        
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:text="订单编号:  233333"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:layout_marginTop="4px"
                    android:layout_marginBottom="4px"
                    android:text="订单编号:  2017-01-01 01:01:01"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:text="审核状态:  待审核"/>
            
        </LinearLayout>
        
        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        
        <TextView
                android:layout_width="200px"
                android:layout_height="60px"
                android:text="查看进度"
                android:background="@drawable/shape_transaction_record_pay_btn_bg"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        
    </LinearLayout>
    
</LinearLayout>