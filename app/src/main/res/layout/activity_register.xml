<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:clipChildren="false">

    <include layout="@layout/common_title_bar"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="108px"
            android:paddingLeft="75px"
            android:paddingRight="75px"
            android:orientation="vertical">


        <!-- 手机号 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="30px"
                    android:layout_height="50px"
                    android:src="@drawable/login_tel"
                    />

            <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38px"
                    android:background="@color/transparency"
                    android:textSize="32px"
                    android:textColorHint="#999999"
                    android:textColor="@color/black"
                    android:hint="输入手机号"
                    />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="45px"
                android:background="#dddddd"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55px"
                android:paddingLeft="18px"
                android:orientation="horizontal"
                android:gravity="center_vertical">


            <ImageView
                    android:layout_width="36px"
                    android:layout_height="40px"
                    android:src="@drawable/register_validate_code"/>

            <EditText
                    android:id="@+id/et_validate_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="38px"
                    android:background="@color/transparency"
                    android:textSize="32px"
                    android:textColorHint="#999999"
                    android:textColor="@color/black"
                    android:hint="输入验证码"
                    />

            <TextView
                    android:id="@+id/tv_send_validate_code"
                    android:layout_width="210px"
                    android:layout_height="70px"
                    android:gravity="center"
                    android:background="@drawable/shape_register_get_validate_code"
                    android:textSize="32px"
                    android:textColor="@color/colorPrimary"
                    android:text="获取验证码"/>


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="45px"
                android:background="#dddddd"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55px"
                android:paddingLeft="18px"
                android:orientation="horizontal"
                android:gravity="center_vertical">


            <ImageView
                    android:layout_width="36px"
                    android:layout_height="40px"
                    android:src="@drawable/login_pwd"/>

            <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="38px"
                    android:background="@color/transparency"
                    android:textSize="32px"
                    android:textColorHint="#999999"
                    android:textColor="@color/black"
                    android:hint="输入密码"
                    android:inputType="textPassword"
                    />

            <ImageView
                    android:id="@+id/iv_show_pwd"
                    android:layout_width="40px"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_show_pwd"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="65px"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/colorPrimary"
                    android:text="可使用鱼友之家账号直接"/>

            <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="100px"
                    android:layout_height="50px"
                    android:layout_marginLeft="17px"
                    android:gravity="center"
                    android:background="@drawable/shape_login_register"
                    android:textColor="@color/colorPrimary"
                    android:text="登录"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="52px"
                android:gravity="center"
                android:background="@drawable/shape_login"
                android:textSize="32px"
                android:textColor="@color/white"
                android:text="下一步"/>


    </LinearLayout>


</LinearLayout>
