<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="436px"
              android:paddingLeft="30px"
              android:paddingTop="25px"
              android:orientation="vertical"
              android:background="@color/white">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30px"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#999999"
                android:text="订单号:   233333333"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#999999"
                android:text="2017-01-01 12:12:12"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="16px"
            android:layout_marginBottom="20px"
            android:background="#dddddd"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="184px"
                android:layout_height="184px"
                android:background="@drawable/default_avatar"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="47px"
                    android:lines="2"
                    android:textSize="28px"
                    android:textColor="@color/black"
                    android:text="ThinkPad T470P i7 7700HQ 16G 256G 笔记本电脑，办公绝佳选择。"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="30px"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32px"
                        android:textColor="#fa0f41"
                        android:text="¥2333"/>

                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32px"
                        android:textColor="@color/black"
                        android:text="x2"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="18px"
            android:layout_marginBottom="18px"
            android:background="#dddddd"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30px"
            android:orientation="horizontal">
        
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:text="订单商品总数:  1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:layout_marginTop="4px"
                    android:layout_marginBottom="4px"
                    android:textSize="24px"
                    android:text="支付金额:  ¥2333.00(含运费¥0.00)"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:text="买家账号： HelloWorld"/>

        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        
        <TextView
                android:layout_width="200px"
                android:layout_height="60px"
                android:text="联系卖家"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_transaction_record_pay_btn_bg"/>
    </LinearLayout>


</LinearLayout>
