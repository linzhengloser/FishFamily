<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="270px"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:paddingLeft="30px"
            android:orientation="horizontal"
            android:gravity="center_vertical">


        <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="120px"
                android:layout_height="120px"
                app:layout_auto_baseheight="width"
                />


        <LinearLayout
                android:id="@+id/ll_login_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28px"
                android:visibility="gone"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="30px"
                        android:textColor="#242424"/>

                <ImageView
                        android:id="@+id/iv_level"
                        android:layout_width="77px"
                        android:layout_height="32px"
                        android:layout_marginLeft="28px"
                        android:src="@drawable/mine_level_one"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                <ImageView
                        android:layout_width="22px"
                        android:layout_height="22px"
                        app:layout_auto_baseheight="width"
                        android:src="@drawable/mine_fish_money"/>

                <TextView
                        android:id="@+id/tv_fish_bean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7px"
                        android:textSize="26px"
                        android:textColor="#999999"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26px"
                        android:textSize="26px"
                        android:textColor="#999999"
                        android:text="请尽快完善资料"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_no_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#242424"
                android:textSize="30px"
                android:visibility="gone"
                android:layout_marginLeft="28px"
                android:text="请先登录"/>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="16px"
                android:layout_height="25px"
                android:layout_marginRight="30px"
                android:src="@drawable/common_arrows"/>

    </LinearLayout>


    <!-- 分割线 -->
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="#dddddd"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:textColor="#242424"
                    android:text="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:textSize="24px"
                    android:textColor="#999999"
                    android:text="分享"/>

        </LinearLayout>

        <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#dddddd"/>

        <LinearLayout
                android:id="@+id/ll_fans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:textColor="#242424"
                    android:text="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:textSize="24px"
                    android:textColor="#999999"
                    android:text="粉丝"/>

        </LinearLayout>

        <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#dddddd"/>

        <LinearLayout
                android:id="@+id/ll_attention"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:textColor="#242424"
                    android:text="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:textSize="24px"
                    android:textColor="#999999"
                    android:text="关注"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
